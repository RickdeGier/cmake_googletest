{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },
        {
            "label": "echo_location",
            "type": "shell",
            "command": "echo $PWD",
            "group": "none",
            "presentation": {
                "focus": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "cmake_build",
            "type": "shell",
            "command": "cmake ..",
            "presentation": {
                "focus": false,
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make_build",
            "type": "shell",
            "command": "make -j8",
            "presentation": {
                "focus": false,
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "cmake_debug",
            "type": "shell",
            "command": "cmake -D CMAKE_BUILD_TYPE=Debug ..",
            "presentation": {
                "focus": false,
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/debug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "make_debug",
            "type": "shell",
            "command": "make -j8",
            "presentation": {
                "focus": false,
                "showReuseMessage": false
            },
            "options": {
                "cwd": "${workspaceFolder}/debug"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run_build",
            "type": "shell",
            "command": "./build/bin/hello_wsl_cmake",
            "presentation": {
                "focus": false,
                "showReuseMessage": false
            },
            "group": "none"
        },
        {
            "label": "build_&_run",
            "dependsOn": [
                "make_build",
                "run_build"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "focus": false,
                "showReuseMessage": false
            },
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "ng g",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "${input:componentName}"
            ]
        }
    ],
    "inputs": [
        {
          "type": "pickString",
          "id": "componentType",
          "description": "What type of component do you want to create?",
          "options": [
            "component",
            "directive",
            "pipe",
            "service",
            "class",
            "guard",
            "interface",
            "enum",
            "enum"
          ],
          "default": "component"
        },
        {
          "type": "promptString",
          "id": "componentName",
          "description": "Name your component.",
          "default": "my-new-component"
        }
      ]
}